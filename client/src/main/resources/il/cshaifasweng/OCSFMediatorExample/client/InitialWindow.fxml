<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #F8F8FF;"
            styleClass="primary-color" stylesheets="@../../../../Styles/LightMode.css"
            xmlns="http://javafx.com/javafx/19"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.InitialWindow">
    <children>
        <Text fill="#020101" layoutX="215.0" layoutY="98.0" strokeType="OUTSIDE" strokeWidth="0.0">
            <font>
                <Font name="Gill Sans MT Condensed" size="55.0"/>
            </font>
        </Text>
        <Button fx:id="staff" layoutX="183.0" layoutY="392.0" mnemonicParsing="false" onAction="#switchToStaffLogin"
                prefHeight="55.0" prefWidth="178.0" text="Staff">
            <font>
                <Font name="Agency FB" size="24.0"/>
            </font>
            <effect>
                <Blend/>
            </effect>
            <cursor>
                <Cursor fx:constant="DEFAULT"/>
            </cursor>
            <styleClass>
                <String fx:value="secondary-color"/>
                <String fx:value="round-border"/>
            </styleClass>
        </Button>
        <Button fx:id="costumers" layoutX="418.0" layoutY="392.0" mnemonicParsing="false"
                onAction="#switchToCostumersLogin" prefHeight="55.0" prefWidth="178.0" text="Costumers">
            <font>
                <Font name="Agency FB" size="24.0"/>
            </font>
            <styleClass>
                <String fx:value="secondary-color"/>
                <String fx:value="round-border"/>
            </styleClass>
        </Button>
        <ImageView fitHeight="230.0" fitWidth="285.0" layoutX="258.0" layoutY="113.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@Images/logo.png"/>
            </image>
        </ImageView>
        <Button fx:id="kiosk" layoutX="300.0" layoutY="494.0" mnemonicParsing="false" onAction="#goToKiosk"
                prefHeight="55.0" prefWidth="178.0" text="Kiosk">
            <font>
                <Font name="Agency FB" size="24.0"/>
            </font>
            <effect>
                <Blend/>
            </effect>
            <cursor>
                <Cursor fx:constant="DEFAULT"/>
            </cursor>
            <styleClass>
                <String fx:value="secondary-color"/>
                <String fx:value="round-border"/>
            </styleClass>
        </Button>
    </children>
</AnchorPane>
