<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="800.0"
            stylesheets="@../../../../Styles/LightMode.css" xmlns="http://javafx.com/javafx/19"
            fx:controller="il.cshaifasweng.OCSFMediatorExample.client.InitialStaffWindow">
    <children>
        <ImageView fitHeight="103.0" fitWidth="149.0" layoutX="28.0" layoutY="474.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@Images/logo.png"/>
            </image>
        </ImageView>
        <ImageView fitHeight="112.0" fitWidth="103.0" layoutX="355.0" layoutY="89.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@Images/lock.png"/>
            </image>
        </ImageView>
        <Text layoutX="283.0" layoutY="261.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Id:">
            <font>
                <Font name="Agency FB Bold" size="25.0"/>
            </font>
        </Text>
        <Text layoutX="216.0" layoutY="310.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Password:"
              wrappingWidth="93.88671875">
            <font>
                <Font name="Agency FB Bold" size="25.0"/>
            </font>
        </Text>
        <TextField fx:id="id" layoutX="332.0" layoutY="239.0">
            <styleClass>
                <String fx:value="secondary-color"/>
                <String fx:value="round-border"/>
            </styleClass>
        </TextField>
        <TextField fx:id="password" layoutX="332.0" layoutY="288.0">
            <styleClass>
                <String fx:value="secondary-color"/>
                <String fx:value="round-border"/>
            </styleClass>
        </TextField>
        <Button fx:id="login" layoutX="360.0" layoutY="363.0" mnemonicParsing="false" onAction="#loginAttempt"
                prefHeight="35.0" prefWidth="95.0" style="-fx-background-color: #3053E1;" styleClass="round-border"
                text="Log In" textFill="WHITE">
            <font>
                <Font name="Calibri Light" size="19.0"/>
            </font>
        </Button>
        <Label fx:id="errorLoginMassage" alignment="CENTER" layoutX="292.0" layoutY="418.0" prefHeight="56.0"
               prefWidth="200.0" textAlignment="CENTER" textFill="RED">
            <font>
                <Font size="19.0"/>
            </font>
        </Label>
        <Button fx:id="back" layoutX="28.0" layoutY="22.0" mnemonicParsing="false" onAction="#getBack" text="Back">
            <styleClass>
                <String fx:value="round-border"/>
                <String fx:value="secondary-color"/>
            </styleClass>
        </Button>
    </children>
</AnchorPane>
